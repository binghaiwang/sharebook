.container {
  height: 100%;
  display: block;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.divider-line{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.section-line{
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  height: 20rpx;
  display: block;
  background: #F7F7FA;
}

setting-item{
  display: block;
  font-size: 36rpx;
  padding-left: 20rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}