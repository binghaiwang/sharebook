.container {
  height: 100%;
  display: block;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 0rpx;
  box-sizing: border-box;
}

.info-layout {
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 50rpx;
}

.info-icon-layout{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 32rpx;
  margin-top: 20rpx;
}

.section-line{
  height: 20rpx;
  display: block;
  background: #F7F7FA;
}

.section-title{
    margin-top: 0rpx;
    margin-bottom: 0rpx;
    padding: 30rpx 30rpx;
    font-size: 32rpx;
}