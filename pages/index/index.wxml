<!--index.wxml-->
<view class="container">
  <button class="scan-button" bindtap="onScanBtnClick"> 扫码上传 </button>
  <view class="body">
        <view class="widgets">
            <block wx:for-items="{{list}}"  wx:key="{{item.id}}">
                <view class="info-header list-item">
                    <image class="info-header-image" src="{{item.image}}"></image>
                    <view class="info-header-texts">
                      <text class="title-text">{{item.title}} {{item.rating.average}}分</text>
                      <text class="author-text">{{item.author}}</text>
                      <text class="rating-text"></text>
                    </view>
                </view>
            </block>
        </view>
    </view>
</view>
