/**index.wxss**/

.container {
  height: 100%;
  display: block;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.body {
  overflow: hidden;
}

.widget {
  position: relative;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.list-item {
  display: block;
  flex-direction: column;
}

.item-layout {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
}

.info-header-image {
  width: 120rpx;
  height: 176rpx;
}

.title-text {
  display: block;
  font-size: 36rpx;
  margin-top: 6rpx;
}

.author-text {
  display: block;
  font-size: 28rpx;
  color: #aaa;
  margin-top: 6rpx;
}

.price-text {
  display: block;
  font-size: 28rpx;
  color: #fdbc40;
  margin-top: 6rpx;
}

.rating-text {
  display: block;
  font-size: 28rpx;
  margin-top: 6rpx;
}

.lbs-text {
  display: block;
  font-size: 32rpx;
  margin-top: 6rpx;
}
