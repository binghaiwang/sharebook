/**library.wxss**/

.container {
  height: 100%;
  display: block;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}

.scan-button {
  margin-bottom: 20rpx;
}

.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.list-item {
  display: flex;
  flex-direction: column;
  align-items:center;
  width: 33%;
  margin-bottom: 40rpx;
}

.info-header-image {
  height: 176rpx;
}

.title-text {
  font-size: 24rpx;
  margin-top: 20rpx;
}

.author-text {
  display: block;
  font-size: 28rpx;
  color: #aaa;
  margin-top: 6rpx;
}

.price-text {
  display: block;
  font-size: 28rpx;
  color: #fdbc40;
  margin-top: 6rpx;
}

.rating-text {
  display: block;
  font-size: 28rpx;
  margin-top: 6rpx;
}

.lbs-text {
  display: block;
  font-size: 32rpx;
  margin-top: 6rpx;
}
