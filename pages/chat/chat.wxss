/**chat.wxss**/
.container-chat {
    display: flex;
    flex-direction: column;
}

.msg-list{
    height: 100vh;
    padding: 20rpx;
    background: #F7F7FA;
    overflow: hidden;
    padding-bottom: 100rpx;
}

.list-item{
    margin-bottom: 40rpx;
    display: flex;
    flex-direction: row;
}

.userinfo-avatar {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
}

.content-text{
    margin-left: 20rpx;
    font-size: 32rpx;
    padding: 10rpx;
    background: #ffffff
}

.send-msg{
    width: 100%;
    height: 80rpx;
    display: flex;
    flex-direction: row;
    margin: 0;
    position: fixed;
    bottom: 0;
    padding: 20rpx;
    background: #ffffff;
}

.edit-text{
    width: 72%;
    height: 100%;
    padding: 4rpx;
    background: #F7F7FA;
}

.send-button {
    height: 100%;
}